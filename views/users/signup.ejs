<% layout("/layouts/boilerplate") %>

<div class="row">
    <div class="col-6 offset-3">
        <h2 class="mt-3">SignUp for Wanderlust</h2>
        <hr>
        <form action="/signup" method="post" novalidate class="needs-validation mt-3">
            <div class="mb-3">
                <label for="username" class="form-label">Enter Username</label>
                <input name="username" class="form-control" type="text" id="username" required>
                <div class="valid-feedback">Name looks good!!</div>
            </div>

            <div class="mb-3">
                <label for="email" class="form-label">Enter Email</label>
                <input name="email" class="form-control" type="email" id="email" required>
                <div class="invalid-feedback">Please enter a valid email</div>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Enter Password</label>
                <input name="password" class="form-control" type="password" id="password" required>
                <div class="invalid-feedback">Please enter a valid password</div>
            </div>

            <button class="btn btn-success mb-3 add-btn" type="submit">Submit</button>
            <br>
        </form>
    </div>
</div>