<% layout("/layouts/boilerplate") %>

<div class="row">
    <div class="col-6 offset-3">
        <h2 class="mt-3">Login for Wanderlust</h2>
        <hr>
        <form action="/login" method="post" novalidate class="needs-validation mt-3">
            <div class="mb-3">
                <label for="username" class="form-label">Enter Username</label>
                <input name="username" class="form-control" type="text" id="username" required>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Enter Password</label>
                <input name="password" class="form-control" type="password" id="password" required>
            </div>

            <button class="btn btn-success mb-3 add-btn" type="submit">Submit</button>
            <br>
        </form>
    </div>
</div>